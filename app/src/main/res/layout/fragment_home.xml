<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lovell.lcs.lcshaoxianzhi.Fragment.HomeFragment">

    <android.support.v7.widget.Toolbar
        android:id="@+id/home_toolBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        >



    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/home_toolBar"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <android.support.v4.view.ViewPager
                android:id="@+id/home_viewPager_ads"
                android:layout_width="match_parent"
                android:layout_height="200dp">

            </android.support.v4.view.ViewPager>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="5">

                <ImageView
                    android:id="@+id/homeFragment_image1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@mipmap/ic_launcher"

                    android:clickable="true"
                    />
                <ImageView
                    android:id="@+id/homeFragment_image2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@mipmap/ic_launcher"

                    android:clickable="true"
                    />
                <ImageView
                    android:id="@+id/homeFragment_image3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@mipmap/ic_launcher"
                    android:clickable="true"
                    />

                <ImageView
                    android:id="@+id/homeFragment_image4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@mipmap/ic_launcher"
                    android:clickable="true"
                    />

                <ImageView
                    android:id="@+id/homeFragment_image5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@mipmap/ic_launcher"
                    android:clickable="true"
                    />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                >
                <TextView
                    android:id="@+id/homeFragment_text1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="品种"
                    />
                <TextView
                    android:id="@+id/homeFragment_text2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="品种"
                    />
                <TextView
                    android:id="@+id/homeFragment_text3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="品种"
                    />
                <TextView
                    android:id="@+id/homeFragment_text4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="品种"
                    />
                <TextView
                    android:id="@+id/homeFragment_text5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="品种"
                    />


            </LinearLayout>


    <com.lovell.lcs.lcshaoxianzhi.weight.HomeListView
        android:id="@+id/homeListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </com.lovell.lcs.lcshaoxianzhi.weight.HomeListView>



        </LinearLayout>
    </ScrollView>




</RelativeLayout>
